<%# <p id="notice"><%= notice %></p>
<% if user_signed_in? %>
  <h1>Friends List</h1>
  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th>Created By</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <% if friend.user %>
            <td><%= friend.user.email %></td>
          <% else %>
            <td>Sign in to see</td>
          <% end %>
          <td><%= link_to 'Show', friend %></td>
          <td><%= link_to 'Edit', edit_friend_path(friend), class:"btn btn-success text-white" %></td>
          <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'Add New Friend', new_friend_path, class:"btn btn-warning text-white" %>
<% else %>
  <h1>Home#index</h1>
  <p>Hello, welcome to the home page</p>
<% end %>
